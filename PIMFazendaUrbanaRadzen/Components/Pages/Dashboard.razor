                                    <RadzenPieSeries Title="Distribuição de Vendas por Cliente" Data="@clientSales" CategoryProperty="NomeCliente" ValueProperty="TotalVendas">
                                        <RadzenSeriesDataLabels Visible="true" />
                                    </RadzenPieSeries>
                                </RadzenChart>
                            </RadzenCard>

                        </RadzenColumn>
                    </RadzenRow>
                </RadzenRow>
