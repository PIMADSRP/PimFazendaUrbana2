@page "/recomendacoes"
<PageTitle>Recomendações de plantio</PageTitle>

<!-- Título na parte superior -->
<div style="text-align: left; margin-bottom: 20px;">
    <RadzenText Text="Recomendações de plantio" TextStyle="TextStyle.H3" TagName="TagName.H1" class="rz-mb-4" />
</div>

<!-- Container geral usando Flexbox para organizar o grid e o formulário -->
<div style="display: flex; flex-direction: row; justify-content: space-between; align-items: flex-start; flex-wrap: wrap;">

    <!-- Parte do formulário (lado esquerdo) -->
    <div style="flex: 1; margin-right: 20px; min-width: 300px; display: flex; flex-direction: column;">
        <!-- Centralizar o texto -->
        <div style="text-align: center; margin-bottom: 15px;">
            <RadzenText Text="Preencha as informações abaixo:" TextStyle="Radzen.Blazor.TextStyle.H6" />
        </div>

        <div style="margin-bottom: 15px;">
            <RadzenRow Gap="5" RowGap="5">
                <RadzenText Text="Região" Style="flex: 0 0 30%; min-width: 100px;" />
                <RadzenDropDown TValue="object" Style="height: 30px; flex: 1; min-width: 150px;"></RadzenDropDown>
            </RadzenRow>
        </div>

        <div style="margin-bottom: 15px;">
            <RadzenRow Gap="5" RowGap="5">
                <RadzenText Text="Estação do Plantio" Style="flex: 0 0 30%; min-width: 100px;" />
                <RadzenDropDown TValue="object" Style="height: 30px; flex: 1; min-width: 150px;"></RadzenDropDown>
            </RadzenRow>
        </div>

        <div style="margin-bottom: 15px;">
            <RadzenRow>
                <RadzenText Text="Possui ambiente climatizado para plantio" Style="flex: 0 0 50%; min-width: 150px;" />
                <RadzenRadioButtonList TValue="object"
                                       Data="@(new List<string> { "Sim", "Não" })"
                                       Style="margin-left: 10px;" />
            </RadzenRow>
        </div>

        <div style="width: 100%;">
            <RadzenColumn Size="12">
                <RadzenButton ButtonStyle="ButtonStyle.Primary"
                              ButtonType="ButtonType.Submit"
                              Icon="check"
                              Text="Confirmar"
                              Variant="Radzen.Variant.Filled"
                              Shade="Radzen.Shade.Default"
                              Style="background-color: var(--rz-primary); width: 100%;" />
            </RadzenColumn>
        </div>
    </div>

    <!-- DataGrid (lado direito) -->
    <div style="flex: 1; min-width: 300px; margin-top: 10px;">
        <RadzenRow>
            <RadzenDataGrid Data="@dataGridItems" TItem="object" Style="border: 1px solid black; padding: 10px; width: 100%; height: auto; min-height: 300px;">
                <Columns>
                    <RadzenDataGridColumn TItem="object" Property="Text" Title="ID" />
                    <RadzenDataGridColumn TItem="object" Property="Text" Title="Nome" />
                    <RadzenDataGridColumn TItem="object" Property="Text" Title="Variedade" />
                    <RadzenDataGridColumn TItem="object" Property="Text" Title="Categoria" />
                    <RadzenDataGridColumn TItem="object" Property="Value" Title="Tempo médio de produção (dias)" />
                </Columns>
            </RadzenDataGrid>
        </RadzenRow>
    </div>
</div>

@code {
    private string selectedProduct;
    private string selectedCategory;

    private List<dynamic> dataGridItems = new List<dynamic>
    {
        new { Text = "Item 1", Value = "1" },
        new { Text = "Item 2", Value = "2" },
        new { Text = "Item 3", Value = "3" }
    };

    public class Item
    {
        public string Text { get; set; }
        public string Value { get; set; }
    }

    private string teste = "teste";
}
